<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>trang-chu</welcome-file>
    </welcome-file-list>

    <!--khuyến mãi-->
    <servlet>
        <servlet-name>PromotionServlet</servlet-name>
        <jsp-file>/view/promotion.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>PromotionServlet</servlet-name>
        <url-pattern>/khuyen-mai</url-pattern>
    </servlet-mapping>

    <!--liên hệ-->
    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <jsp-file>/view/contact.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/lien-he</url-pattern>
    </servlet-mapping>

    <!--giới thiệu-->
    <servlet>
        <servlet-name>AboutServlet</servlet-name>
        <jsp-file>/view/about.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutServlet</servlet-name>
        <url-pattern>/gioi-thieu</url-pattern>
    </servlet-mapping>

    <!--thực đơn-->

</web-app>